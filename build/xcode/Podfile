  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  pod 'ACPCore', '~> 2.0'
end

target 'functionalTests' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  pod 'ACPCore', '~> 2.0'
end

target 'functionalTestsConfig' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  pod 'ACPCore', '~> 2.0'
end

